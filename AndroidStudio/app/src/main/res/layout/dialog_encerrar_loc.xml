<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <!--ajuste card-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!--Conteudo Card-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTextOne"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:text="Tem certeza que deseja encerar a locação?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <!--redireciona ao cadastrar cartão -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEncerrar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            android:elevation="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Encerrar"
            android:textColor="@color/blue_nav"
            android:textSize="18sp"
            android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancelar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:elevation="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancelar"
                android:textColor="@color/blue_nav"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>