<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyGuardian"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LiberarLocacaoActivity">
    

    <!--Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/greyGuardian"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logovetor" />

    </androidx.appcompat.widget.Toolbar>

    <!--shape fundo-->
    <View
        android:id="@+id/view_loc_container"
        android:layout_width="349dp"
        android:layout_height="581dp"
        android:layout_margin="30dp"
        android:background="@drawable/select_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.785" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!--Texto titulo-->
    <TextView
        android:id="@+id/TextSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:drawablePadding="20dp"
        android:text="Liberar Locação"
        android:drawableLeft="@drawable/baseline_lock_open_24"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

        <!--texto informativo-->
    <TextView
        android:id="@+id/TextSelect1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:drawablePadding="20dp"
        android:text="Escanear o QrCode do Cliente"
        android:textColor="@color/greyGuardian"
        android:textSize="20sp"
        android:textStyle="bold" />

        <!--Code escanner-->
        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>


