<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <!--ajuste card-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!--Botão fechar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClosePopup3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-13dp"
            android:background="@color/zxing_transparent"
            android:text="@string/Fechar"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--Conteudo Card-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTextOne"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:text="@string/locacao_pendente_popup"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!--redireciona ao cadastrar cartão -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLocation"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/yellowbtn"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="11dp"
            android:text="Mostrar Locação"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>