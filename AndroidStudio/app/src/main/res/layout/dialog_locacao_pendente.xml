<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="10dp">

    <!--ajuste card-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Botão fechar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClosePopup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="-15dp"
            android:textSize="20sp"
            android:textColor="@color/blue_nav"
            android:text="@string/Fechar"
            android:layout_gravity="end"/>

        <!--Conteudo Card-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTextOne"
            android:layout_width="300dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Você tem uma locação pendente!"
            android:textSize="17sp"
            android:layout_gravity="center"
            />

        <!--redireciona ao cadastrar cartão -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLocation"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:text="Mostrar Locação"
            android:textSize="18sp"
            android:background="@color/grey"
            android:elevation="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/blue_nav"
            android:layout_marginTop="10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>