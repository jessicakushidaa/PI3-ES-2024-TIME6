<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentManagerActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRent"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:text="Alugar Armário"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRentals"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:text="Minhas Locações"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHome"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="MAPA"
            android:layout_marginLeft="45dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCartoes"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="CARTÕES" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLocacoes"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="LOCAÇÕES" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>