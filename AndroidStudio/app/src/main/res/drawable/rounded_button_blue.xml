<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/baby_blue" /> <!-- Cor quando o botão está pressionado -->
            <corners android:radius="10dp" /> <!-- Raio dos cantos -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_nav" /> <!-- Cor padrão do botão -->
            <corners android:radius="10dp" /> <!-- Raio dos cantos -->
        </shape>
    </item>
</selector>
