<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textInputETLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/greyGuardian</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/yellowbtn</item>
        <item name="maxLines">1</item>
    </style>
    <style name="GuardianTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/yellowbtn</item>
        <item name="android:textColorHint">@color/blue_nav</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textInputSCadastro" parent="GuardianTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="textInputETCadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/greyGuardian</item>
    </style>
    <style name="TimePriceBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/time_price_box</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">46dp</item>
    </style>
    <style name="TextGuide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/blue_nav</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="TextInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:drawableLeft">@drawable/open_padlock</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:text">Liberar Locação</item>
        <item name="android:textColor">@color/blue_nav</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="VerticalLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>